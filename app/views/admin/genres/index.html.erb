<div class="row">
  <div class="col-md-12 my-2 text-center"><br />
    <h2>ジャンル一覧・新規登録画面</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12 my-2 text-center ">
    <%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>
      <%= f.text_field :genre %>
      <%= f.submit "新規登録", class:"btn btn-sm"%>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 my-2 text-center ">
  <% @genres.each do |genre|%>
   <tr>
    <td class="text-left"><%= genre.genre %></td>
    <td><%= link_to "編集", edit_genre_path(genre), class:"btn btn-sm btn-outline-success" %></td>
    <td><%= link_to "削除", admin_genre_path(genre), method: :delete, class:"btn btn-sm btn-outline-danger" %></td>
   </tr><br>
  <% end %>
  </div>
</div>