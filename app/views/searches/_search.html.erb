<div class="search_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
  <%= f.text_field:word, :size => 60, placeholder: "　あなたにぴったりの趣味を探してみましょう！" %>
  <%= f.select :range, options_for_select([['Post'],['User']]) %>
  <%= f.submit"Let`s Search", class:"search-button"%>
  <% end %>
</div>