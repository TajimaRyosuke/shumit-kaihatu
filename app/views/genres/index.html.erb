<h1>ジャンル一覧・新規登録画面</h1>

<%= form_with model: @genre, local: true do |f| %>
<%= f.text_field :genre %>
<%= f.submit "新規登録", class:"btn btn-sm"%>
<% end %>

<% @genres.each do |genre|%>
<tr>
  <td><%= genre.genre %></td>
  <td><%= link_to "編集", edit_genre_path(genre), class:"btn btn-sm btn-outline-success" %></td>
  <td><%= link_to "削除", genre_path(genre), method: :delete, class:"btn btn-sm btn-outline-danger" %></td>
</tr><br>
<% end %>
