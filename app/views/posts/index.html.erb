<div class="main-visual">
  <h1 class="topic">WEEKLY PICK UP ! !</h1>
</div>

<div class="search"><!--検索機能-->
  <%= render 'searches/search' %>
</div>

<div class="post-index">
  <table>
 <% @posts.each do |post| %>
    <tr class="post_image-index">
       <%= link_to post_path(post) do %>
       　<%= attachment_image_tag(post, :post_image, size:"150x150")%>
       <% end %>
    </tr>
 <% end %>
　</table>
</div>

<div class="genre-index">
  <label>ジャンル選択機能</label>
</div>

<div class="ranking-index">
  <label>ランキング機能</label><br>
  <% @post_ranks.each do |post| %>
    <%= link_to post_path(post) do %>
      <%= attachment_image_tag(post, :post_image, size:"70x70") %>
      <%= post.post_title %><br>
    <% end %>
  <% end %>
</div>

<div class="message-index">
  <label>メッセージ機能</label>
</div>

<div class="group-index">
  <label>グループ一覧機能</label>
</div>

