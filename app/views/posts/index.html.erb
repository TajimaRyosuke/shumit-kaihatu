<div class="main-visual">
  <h1 class="topic">WEEKLY PICK UP ! !</h1>
</div>

<div class="search"><!--検索機能-->
  <%= render 'searches/search' %>
</div>

<div class="post-index">
  <% if @genre %>
    <!--ジャンル選択時の一覧画面-->
      <% @genre.posts.each do |post| %>
        <%= link_to post_path(post), class:"post-link-index" do %>
          <%= attachment_image_tag(post, :post_image, size:"150x150")%>
        <% end %>
      <% end %>
      <span class="page-btn"><%= paginate @genres %></span>
  <% else %>
    <!--トップページの一覧画面-->
      <% @posts.each do |post| %>
        <%= link_to post_path(post), class:"post-link-index" do %>
       　 <%= attachment_image_tag(post, :post_image, size:"150x150")%>
        <% end %>
      <% end %>
      <span class="page-btn"><%= paginate @posts %></span>
　<% end %>
</div>

<div class="genre-index"><!--ジャンルを選択-->
  <label>ジャンルで絞る</label><br>
  <%= link_to "新着順", posts_path, class:"btn" %><br>
  <% @genres_index.each do |genre| %>
    <%= link_to genre.genre, posts_path(id: genre), class:"btn" %><br>
  <% end %>
</div>

<div class="ranking-index">
  <span class="far fa-thumbs-up">いいね取得数ランキング</span><br>
  <% @post_ranks.each do |post| %>
    <%= link_to post_path(post), class: "ranking" do %>
      <%= attachment_image_tag(post, :post_image, size:"70x70") %>
      <%= post.post_title %><br>
    <% end %>
  <% end %>
</div>

<div class="group-index">
  <%= link_to " 新着メッセージ", notifications_path, class:"fas fa-bell new-message" %>
</div>
