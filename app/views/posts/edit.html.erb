<label>投稿編集画面</label>

<%= form_with model: @post, local:true do |f| %>
<label>投稿画像</label>
<%= f.attachment_field :post_image %>
<label>投稿タイトル</label>
<%= f.text_field :post_title, size: "30", class:"form-control" %>
<label>本文</label>
<%= f.text_area :opinion, size:"30x5", class:"form-control"%>
<label>ジャンル</label>
<%= f.collection_select :genre_id, Genre.all, :id, :genre, prompt: "---ジャンルを選択---", size:"30", class:"form-control" %><br>
<%= f.submit '変更内容を保存', class:"btn btn-sm btn-outline-success" %>
<% end %>
