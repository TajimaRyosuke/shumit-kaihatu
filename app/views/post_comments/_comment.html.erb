<div>
    <% post_comment.each do |post_comment| %>
      <%= link_to user_path(post_comment.user_id) do %>
       <%= attachment_image_tag(post_comment.user, :profile_image, size:"45x45", fallback: "no_image.png") %>
       <%= post_comment.user.name %>
      <% end %><br>
       <%= post_comment.comment %><br>
    <% end %><br>
</div>
<div>
    <%= form_with model: [post, PostComment.new] do |f| %>
       <%= f.text_area :comment, placeholder: "　コメントを入力しましょう！！"%><br>
       <%= f.submit "Send Comment", class:"comment-submit" %>
    <% end %><br>
</div>
