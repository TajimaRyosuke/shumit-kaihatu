<div>
    <% post_comment.each do |post_comment| %>
      <%= link_to user_path(post_comment.user_id) do %>
       <%= attachment_image_tag post_comment.user, :profile_image, :fill, 10, 10, fallback: "no_image.png" %>
       <%= post_comment.user.name %>
      <% end %>
       <%= post_comment.comment %><br>
    <% end %>
</div>
<div>
    <%= form_with model: [@post, PostComment.new] do |f| %>
       <%= f.text_area :comment, size:"15x5", class:"form-control" %><br>
       <%= f.submit "コメントを送信" %>
    <% end %><br>
</div>