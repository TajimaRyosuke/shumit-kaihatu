<!DOCTYPE html>
<html>
  <head>
    <title>Shum!t</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg ">
      <div>
        <%= link_to posts_path do %>
         <label class="text-light">Shumit</label>
        <% end %>
      </div>

       <% if user_signed_in? %>
       <ul class="navbar-nav ml-auto">
         <li><%= link_to '新規投稿', new_post_path, class:'btn btn-ms text-light' %></li>
         <li><%= link_to 'マイページ', user_path(current_user), class:'btn btn-ms text-light'%></li>
         <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:'btn btn-ms text-light'%></li>
       </ul>
       <% else %>
       <ul class="navbar-nav ml-auto">
         <li><%= link_to 'ログイン', user_session_path, class:'btn btn-ms text-light' %></li>
         <li><%= link_to 'サインイン', new_user_registration_path, class:'btn btn-ms text-light'%></li>
       </ul>
       <% end %>
    </nav>
    </header>

    <main>
 <%= yield %>
    </main>

    <footer>
      <div>
        <label> 2021 Shum!t</label>
      </div>
    </footer>
  </body>
</html>
